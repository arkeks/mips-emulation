{
  "$schema": "tests-config.schema.json",
  "name": "Languages Bencher",
  "description": "Configuration for speed comparison of programming languages for emulator development",
  "languages": {
    "kotlin_jvm": {
      "prime_number": {
        "path": "tests/prime_number/kotlin_jvm/cmd.kt",
        "commands": [
          "docker run bench:latest kotlinc -version",
          "docker run -v {}:/app bench:latest kotlinc /app/tests/prime_number/kotlin_jvm/cmd.kt -include-runtime -d /app/tests/prime_number/kotlin_jvm/cmd.jar",
          "docker run -v {}:/app bench:latest bash -c 'time -p java -jar /app/tests/prime_number/kotlin_jvm/cmd.jar 10 2>&1'"
        ]
      }
    },
    "python_cpython": {
      "prime_number": {
        "path": "tests/prime_number/python/cmd.py",
        "commands": [
          "docker run bench:latest python3 --version",
          "docker run -v {}:/app bench:latest bash -c 'time -p python3 /app/tests/prime_number/python/cmd.py 10 2>&1'"
        ]
      }
    },
    "c": {
      "qsort": {
        "path": "tests/qsort/c/cmd.c",
        "commands": [
          "gcc -o gen_data gen_data.c",
          "./gen_data 10000",
          "gcc -o cmd_tst cmd.c src.c",
          "docker run -v {}:/app bench:latest bash -c 'time -p /app/tests/qsort/c/cmd_tst 10000 2>&1'",
          "rm gen_data",
          "rm cmd_tst"
        ]
      }
    }
  }
}